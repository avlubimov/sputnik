-- Package metadata
package = 'Cosmo'
version = '8.01.21-0'
description = {
  summary = 'A "safe template" library',
  detailed = [[
     Cosmo provides "safe templates" functionality.  In the simplest case, Cosmo provides a 
     function that fills a string template with data from a table.  The more complicated
     usage allows for nested tables and functional-style iteration.
  ]],
